<footer class="footer">
  <div class="container-1">
   <hr> 
     <div class="past-events">
     <h1 class="heading-2">Past Events</h1>

     <% Event.all.each do |event|%>
      <% if event.date.past? %>
        <p class="past-event"> 
          <%= event.title %> on <%= event.date %> <span><i class="fa fa-info-circle" aria-hidden="true"></i></span>
        </p>
      <% end %>
     <% end %>
     
  </div>

  </div>

</footer>