
<%= render 'events/navbar' %>

<%# <%= link_to 'Add New Event', new_event_path %> 

<div class="container">
  <h1 class="heading">All Upcoming Events</h1>


  <div class="events-grid">
      <% @events.each do |event| %>
        <% if !event.date.past? %>
              <div class="event-card">
                <h3 class="event-title"> <%= event.title %> </h3>
                <p class="event-time"><span><i class="fa fa-calendar" aria-hidden="true"></i></span> <%= event.date%> </p>
                <div class="event-btn"><%= link_to 'EVENT DETAILS', event_path(event.id), :id=>"details-btn" %> </div>    
              </div>
        <% end %>     
      <% end %>
    </div>
</div>

<%= render 'events/footer' %>