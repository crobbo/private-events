<%# <h1>Events</h1>

<%= render 'events/event_feed' %>

<%# <%= link_to 'Add New Event', new_event_path %> 

<header>
  <div>
    <h1 class="text-logo">PrivateEvents</h1>
  </div>

  <div class="nav-links">
    <% if user_signed_in? %>
      <p id=""><%= link_to 'Add Event', new_event_path %></p>
      <p id=""><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></p>
    <% else %>

      <span id=""><%= link_to 'Log In', new_user_session_path %></span>
      <span id=""> <%= link_to 'Sign Up', new_user_registration_path %> </span>

    <% end %>
  </div>
</header>

<div class="container">
  <h1 class="heading">All Upcoming Events</h1>


  <div class="events-grid">
  <% @events.each do |event| %>
        <div class="event-card">
          <h3 class="event-title"> <%= event.title %> </h3>
          <p class="event-time"><span><i class="fa fa-calendar" aria-hidden="true"></i></span> <%= event.date%> </p>
          <div class="event-btn">Event Details</div>        
        </div>
        <% end %>
    </div>


</div>


